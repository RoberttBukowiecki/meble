# ============================================================================
# SUPABASE
# ============================================================================
# Get these from https://app.supabase.com/project/_/settings/api
# Use the new "Publishable" and "Secret" API keys

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_publishable_key
SUPABASE_SECRET_KEY=your_secret_key

# ============================================================================
# AUTH CONFIGURATION
# ============================================================================
# Site URL for OAuth redirects

NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================================================
# POSTHOG ANALYTICS
# ============================================================================
# Get these from https://posthog.com -> Project Settings
# Use EU hosting for GDPR compliance: https://eu.posthog.com

NEXT_PUBLIC_POSTHOG_KEY=phc_your_project_api_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# Source Maps Upload (optional - for readable error stack traces)
# Get Personal API Key from: PostHog -> Settings -> Personal API Keys
# Get Environment ID from: PostHog -> Project Settings -> Error Tracking
POSTHOG_PERSONAL_API_KEY=phx_your_personal_api_key
POSTHOG_ENV_ID=env_your_environment_id


# ============================================================================
# PAYMENTS API
# ============================================================================
# URL to the payments app API
# Local: http://localhost:3002/api
# Production: https://payments.e-meble.com/api

NEXT_PUBLIC_PAYMENTS_API_URL=http://localhost:3002/api